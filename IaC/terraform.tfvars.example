# AWS Configuration
aws_region = "eu-west-3"

# GitHub Configuration (for Terraform provider - manages GitHub secrets)
github_token       = "ghp_your_github_token_here"  # Personal Access Token with repo and admin:repo_hook scopes
github_repo_owner  = "joanix2"
github_repo_name   = "Auto-code-v1"

# GitHub OAuth App (for user authentication)
github_client_id     = "your_github_oauth_client_id"
github_client_secret = "your_github_oauth_client_secret"

# Neo4j Database
neo4j_password = "your_secure_neo4j_password"

# SSH Keys
public_key_path  = "~/.ssh/aws_key.pem.pub"
private_key_path = "~/.ssh/aws_key.pem"

# Project Settings
project_name = "autocode"
environment  = "production"
